<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llRegisterStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".Estudiante.StudentRegisterActivity">


        <TextView
            android:id="@+id/tvNewTypeOfUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione el tipo de usuario"
            android:textStyle="bold"
            android:textSize="16sp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spNewTypeOfUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Nombre"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNameRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_edt"
            android:elevation="4dp"
            android:ems="10"
            android:hint="@string/name_register"
            android:inputType="textPersonName"
            android:padding="15dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Apellido"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtSurnameRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_edt"
            android:elevation="4dp"
            android:ems="10"
            android:hint="@string/surname_register"
            android:inputType="textPersonName"
            android:padding="15dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/prompt_email"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtMailRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_edt"
            android:elevation="4dp"
            android:ems="10"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:padding="15dp" />

        <TextView
            android:id="@+id/tvCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Carnet"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtCarneRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_edt"
            android:elevation="4dp"
            android:ems="10"
            android:hint="@string/carnet_register"
            android:inputType="textPersonName"
            android:maxLength="12"
            android:padding="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/num_placa_register"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtPlacaRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_edt"
            android:elevation="4dp"
            android:ems="10"
            android:hint="@string/num_placa_register"
            android:inputType="textPersonName"
            android:maxLength="7"
            android:padding="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Contraseña"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtPassRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_edt"
            android:elevation="4dp"
            android:ems="10"
            android:hint="@string/pass_register"
            android:inputType="textPassword"
            android:padding="15dp" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Confirmar contraseña"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtPassConfirmRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_edt"
            android:elevation="4dp"
            android:ems="10"
            android:hint="@string/pass_confirm_register"
            android:inputType="textPassword"
            android:padding="15dp" />

        <LinearLayout
            android:id="@+id/llButtonOptionRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelarRegisterStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/oval_white"
                android:text="@string/btn_cancelar"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btnRegisterStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/oval"
                android:text="@string/btn_register_student"
                android:textColor="#FFF" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>