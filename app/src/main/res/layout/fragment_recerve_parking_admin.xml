<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    tools:context=".Admin.RecerveParking">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView66"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/days_admin"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spSeleccionarDias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/teacher_admin"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSeleccionarDocenteRP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/oval_white"
            android:text="@string/selectedTeacher"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/estacionamiento"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSeleccionarEstacionamientoRP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/oval_white"
            android:text="@string/selectedBuilding"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView69"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/parking_lenght_admin"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spCantidadHorariosRP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/schedule_admin"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSeleccionarHorarioRP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/oval_white"
            android:text="@string/selectedScedule"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView71"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Comentario"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtComentario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:theme="@style/EditTextTheme"
            android:cursorVisible="false"
            android:hint="Detalles de reserva de estacionamiento"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDenegarRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/oval_white"
                android:text="@string/denegar_admin"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btnAceptarRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/oval"
                android:text="@string/aceptar_admin"
                android:textColor="@color/colorSecundary" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</FrameLayout>