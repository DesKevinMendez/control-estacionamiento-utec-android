<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusable="true"
    android:clickable="true"
    tools:context=".Admin.ReserveEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/parking_admin"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSelectedBuilding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/oval_white"
            android:textColor="@color/colorPrimary"
            android:text="@string/selectedBuilding" />

        <TextView
            android:id="@+id/edtCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/parking_lenght_admin"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/SpCantidadEstacionamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/edtCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/schedule_admin"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/SpHorariosRP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/etPlannedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Fecha"
            android:theme="@style/EditTextTheme"
            android:inputType="date"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDenegarRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/oval_white"
                android:text="@string/denegar_admin"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btnAceparRP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/oval"
                android:text="@string/aceptar_admin"
                android:textColor="@color/colorSecundary" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>