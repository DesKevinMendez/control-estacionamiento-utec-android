<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusable="true"
    android:clickable="true"
    tools:context=".Admin.ViewAssignParking.SelectedTeacher">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#dedede"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/tvFindUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Carnet o nombre de docente"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnFindUserSB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar usuario" />
        </LinearLayout>

        <TextView
            android:id="@+id/lineHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/line_horizontal"
            android:singleLine="false"
            android:text="" />

        <TextView
            android:id="@+id/tvResultadosST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Resultados" />

        <ListView
            android:id="@+id/lvTeachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>